@import "nib"

html
  min-height 100%

body
  font-family "Roboto"
  margin 0
  background url(/images/stamp.png) bottom right no-repeat
  background-attachment fixed
  min-height 100%

a
  color #00f

  &:hover
    text-decoration none

  &:active
    background #000
    color #fff

p code, li code
  font-size 16px
  background rgba(0, 0, 0, 0.1)

nav
  font-size 14px
  width 270px
  overflow-y auto
  position fixed
  top 0
  background #ddd
  bottom 0

  display flex
  flex-flow column

  .language
    margin 0.5em

  .language select
    padding 0.25em
    width 100%

  .menu
    flex 1
    overflow-y auto

  .menu ol
    list-style none
    margin 0
    padding 0

  .menu li
    padding 0
    margin 0

  .menu > ol > li
    text-transform uppercase
    color #666
    background #ccc
    padding 0.25em 0.5em

  .menu > ol ol
    padding 0.5em

  a
    display block
    color #444
    padding 0.25em 0.5em
    text-decoration none

    &:hover
      background #ccc

    &.active
      background #444
      color #eee

main
  display block
  flex 1

  header
    background #eee
    color #888
    margin-left 270px
    text-transform uppercase

    &:hover { background: #888; color: #eee; }

    a { text-decoration: none; display: flex; align-items: center; padding: 1em; color: inherit; }
    img { width: 32px; padding-right: 0.5em; }

  .page
    padding 1em
    max-width 1000px
    margin-left 270px

    p img
      max-width 100%

h1
  margin-top 0
  text-transform uppercase

.page div
  p:first-of-type
    margin-top 0

  p:last-of-type
    margin-bottom 0

.note
  background #cfa
  border 1px solid rgba(0,0,0,0.2)
  padding 0.5em

.action
  padding 0.5em
  border-left 0.2em solid #888
  background rgba(0,0,0,0.1)

.note:not(:last-child), .action:not(:last-child)
  margin-bottom 1em

.page > pre
  font-size 18px
  background #474747
  color #dadada
  padding 0.5em
  word-wrap break-word

abbr
  text-decoration underline
  text-decoration-style dotted
