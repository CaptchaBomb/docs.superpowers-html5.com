@import 'nib'

html
  min-height 100%

body
  font-family 'Roboto'
  margin 0
  background url(/images/stamp.png) bottom right no-repeat
  background-attachment fixed
  min-height 100%

a
  color #00f

  &:hover
    text-decoration none

  &:active
    background #000
    color #fff

p code, li code
  font-size 16px
  background rgba(0, 0, 0, 0.1)

nav
  width 240px
  position fixed
  top 0
  background #ddd
  bottom 0

  ol
    list-style none
    margin 0
    padding 0.5em

  li
    padding 0
    margin 0

  a
    display block
    color #444
    padding 0.25em 0.5em
    text-decoration none

    &:hover
      background #ccc

    &.active
      background #444
      color #eee

main
  margin-left 240px
  padding 1em
  flex 1
  max-width 1000px

  p img
    max-width 100%

h1
  margin-top 0

main div
  p:first-of-type
    margin-top 0

  p:last-of-type
    margin-bottom 0

.note
  background #cfa
  border 1px solid rgba(0,0,0,0.2)
  padding 0.5em

.action
  padding 0.5em
  border-left 0.2em solid #888
  background rgba(0,0,0,0.1)

.note:not(:last-child), .action:not(:last-child)
  margin-bottom 1em

main > pre
  font-size 18px
  background #474747
  color #dadada
  padding 0.5em

abbr
  text-decoration underline
  text-decoration-style dotted
